<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/userHeader_frameHeight"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bg_user_border"
            android:gravity="center"
            android:padding="@dimen/userHeader_usernamePadding"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="@string/username" />

        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_user_border"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/holo_red_dark"
            tools:text="@string/score_sample" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/userHeader_frameHeight"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/followers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bg_user_border"
            android:gravity="center"
            android:paddingEnd="0dp"
            android:paddingLeft="@dimen/userHeader_paddingLeftStart"
            android:paddingRight="0dp"
            android:paddingStart="@dimen/userHeader_paddingLeftStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/darker_gray"
            tools:text="@string/followers" />

        <Button
            android:id="@+id/btnFollow"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_user_border"
            android:textSize="@dimen/btnFollowOrEvents_textSize"
            tools:text="@string/btnFollow" />

    </LinearLayout>

</LinearLayout>