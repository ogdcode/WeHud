<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wehud.activity.RegisterActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/register_marginRightEnd"
        android:layout_marginLeft="@dimen/register_marginLeftStart"
        android:layout_marginRight="@dimen/register_marginRightEnd"
        android:layout_marginStart="@dimen/register_marginLeftStart"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:maxLines="@integer/single_field"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/register_marginRightEnd"
        android:layout_marginLeft="@dimen/register_marginLeftStart"
        android:layout_marginRight="@dimen/register_marginRightEnd"
        android:layout_marginStart="@dimen/register_marginLeftStart"
        android:layout_marginTop="@dimen/register_marginTop"
        android:ems="10"
        android:hint="@string/hint_username"
        android:inputType="textPersonName"
        android:maxLines="@integer/single_field"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/register_marginRightEnd"
        android:layout_marginLeft="@dimen/register_marginLeftStart"
        android:layout_marginRight="@dimen/register_marginRightEnd"
        android:layout_marginStart="@dimen/register_marginLeftStart"
        android:layout_marginTop="@dimen/register_marginTop"
        android:ems="10"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:maxLines="@integer/single_field"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/register_marginRightEnd"
        android:layout_marginLeft="@dimen/register_marginLeftStart"
        android:layout_marginRight="@dimen/register_marginRightEnd"
        android:layout_marginStart="@dimen/register_marginLeftStart"
        android:layout_marginTop="@dimen/register_marginTop"
        android:ems="10"
        android:hint="@string/hint_confirmPassword"
        android:inputType="textPassword"
        android:maxLines="@integer/single_field"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/btnCreateAccount"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/register_marginRightEnd"
        android:layout_marginLeft="@dimen/register_marginLeftStart"
        android:layout_marginRight="@dimen/register_marginRightEnd"
        android:layout_marginStart="@dimen/register_marginLeftStart"
        android:layout_marginTop="@dimen/register_btnMarginTop"
        android:text="@string/create_account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />

</android.support.constraint.ConstraintLayout>
